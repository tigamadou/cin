# CIN Event Management System - Production Environment
# ===================================================

# Database Configuration
POSTGRES_DB=cin_prod
POSTGRES_USER=cin_user
POSTGRES_PASSWORD=your_secure_production_password_here

# Django Configuration
SECRET_KEY=your_very_secure_secret_key_for_production_change_this
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost
APP_DOMAIN=https://yourdomain.com

# ===========================================
# EMAIL CONFIGURATION (PRODUCTION SMTP)
# ===========================================
# Production SMTP settings
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-smtp-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# SECURITY SETTINGS (PRODUCTION)
# ===========================================
# Uncomment and configure for production
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# ===========================================
# MONITORING (OPTIONAL)
# ===========================================
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_ENABLED=True
